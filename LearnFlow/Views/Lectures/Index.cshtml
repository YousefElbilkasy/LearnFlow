@{
  ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4" style="color: white;">Course Name</h1>

<div class="container">
  @* @if (User.IsInRole("Instructor")) *@

  <a asp-action="Create" class="btn custom-purple-btn mb-4">Add Lecture</a>


  <div class="row">
    @foreach (var item in Model)
    {
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm" style="background-color: rgba(111, 66, 193, 0.3); border-radius: 15px;">
          <div class="card-body text-center">
            <h5 class="card-title text-white">@item.Title</h5>
            <div class="mb-3">
              <video width="100%" controls style="border-radius: 10px;">
                <source src="@Url.Content(item.Content)" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
            <div>
              @if (User.IsInRole("Instructor")){
              <a asp-action="Edit" asp-route-id="@item.LectureId" class="btn btn-outline-light btn-sm">Edit</a>
              <a asp-action="Delete" asp-route-id="@item.LectureId" class="btn btn-outline-light btn-sm">Delete</a>
              }

              <a asp-action="Details" asp-route-id="@item.LectureId" class="btn btn-outline-light btn-sm">Details</a>
            </div>
          </div>
        </div>
      </div>
    }
  </div>
</div>

<style>
  body {
    background-color: white;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: bold;
  }


  .custom-purple-btn {
    background-color: #6f42c1;
    /* Primary purple color */
    color: #ffffff;
    /* White text */
    border: none;
  }

  .custom-purple-btn:hover {
    background-color: #7d3c98;
    /* Darker purple for hover */
    color: #ffffff;
  }

  .btn-outline-light {
    color: #6f42c1;
    border-color: #6a1b9a;
  }

  .btn-outline-light:hover {
    background-color: #6a1b9a;
    color: white;
  }

  .custom-purple-btn {
    background-color: #9b59b6;
    /* Primary purple color */
    color: #ffffff;
    /* White text */
    border: none;
  }

  .custom-purple-btn:hover {
    background-color: #7d3c98;
    /* Darker purple for hover */
    color: #ffffff;
  }
</style>
