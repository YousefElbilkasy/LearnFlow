@using LearnFlow.ViewModel
@model LearnFlow.ViewModel.CreateVideoViewModel


@{
    ViewData["Title"] = "Upload Video";
}

<h1 class="text-center mb-4" style="color: white;">Upload New Lecture Video</h1>

<div class="container">
    <div class="form-container bg-light-purple p-5 shadow rounded">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group mb-4">
                <label asp-for="Content" class="control-label text-purple">Upload Video</label>
                <input asp-for="Content" type="file" class="form-control" accept="video/*" required />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-4">
                <label asp-for="Title" class="control-label text-purple">Title</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <!-- Hidden field for CourseId -->
            <input type="hidden" asp-for="CourseId" value="@ViewData["CourseId"]" />

            <div class="form-group mb-4">
                <label asp-for="Order" class="control-label text-purple">Order</label>
                <input asp-for="Order" type="number" class="form-control" required />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            
            <div class="text-center">
                <button type="submit" class="btn custom-purple-btn">Add Video</button>
            </div>
        </form>
    </div>

    <div class="text-center mt-4">
        
        <a asp-controller="Lectures" asp-action="Index" asp-route-courseId="@ViewData["CourseId"]" class="btn btn-outline-purple">
    Return to Lectures
</a>

    </div>
</div>



@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}

<!-- Embedded CSS for Consistent Style -->
<style>
    /* Colors */
    .bg-light-purple {
        background-color: white;
    }

    .text-purple {
        color: #6f42c1;
    }

    /* Button styling */
    .custom-purple-btn {
        background-color: #6f42c1; /* Primary purple color */
        color: white;
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: bold;
        border: none;
        transition: background-color 0.3s ease;
    }

    .custom-purple-btn:hover {
        background-color: #5a3798;
        color: white;
    }

    .btn-outline-purple {
        border: 2px solid #6f42c1;
        color: white;
        border-radius: 25px;
        padding: 10px 20px;
        text-decoration: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-outline-purple:hover {
        background-color: #6f42c1;
        color: white;
    }

    /* Form container styling */
    .form-container {
        max-width: 500px;
        margin: 20px auto;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Form elements */
    .form-control {
        border-radius: 10px;
        border: 1px solid #6f42c1;
    }

    .form-control:focus {
        box-shadow: 0 0 5px rgba(111, 66, 193, 0.5);
        border-color: #5a3798;
    }

    /* Labels */
    .control-label {
        font-weight: bold;
    }

    /* Validation text styling */
    .text-danger {
        font-size: 0.9em;
        font-style: italic;
    }
</style>
