@model IEnumerable<LearnFlow.Models.User>

@{
    ViewData["Title"] = "Instructors";
}

<h1 class="text-center mb-4" style="color: white;">Instructors</h1>

<div class="container">
    <div class="table-container bg-light-purple p-5 shadow rounded">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-purple font-weight-bold">Full Name</th>
                    <th class="text-purple font-weight-bold">Email</th>
                    <th class="text-purple font-weight-bold">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var instructor in Model)
                {
                    <tr>
                        <td class="text-dark">@instructor.FullName</td>
                        <td class="text-dark">@instructor.Email</td>
                        <td>
                            <a asp-action="EditInstructor" asp-route-id="@instructor.Id" class="btn custom-purple-btn">Edit</a>
                            <a asp-action="DeleteInstructor" asp-route-id="@instructor.Id" class="btn btn-outline-purple">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .bg-light-purple {
        background-color: white;
    }

    .text-purple {
        color: #6f42c1;
    }

    .custom-purple-btn {
        background-color: #6f42c1;
        color: white;
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: bold;
        border: none;
        transition: background-color 0.3s ease;
    }

    .custom-purple-btn:hover {
        background-color: #5a3798;
        color:white;
    }

    .btn-outline-purple {
        border: 2px solid #6f42c1;
        color: #6f42c1;
        border-radius: 25px;
        padding: 10px 20px;
        text-decoration: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-outline-purple:hover {
        background-color: #6f42c1;
        color: white;
    }

    .table-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>
