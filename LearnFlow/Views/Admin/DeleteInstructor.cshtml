@model LearnFlow.Models.User

@{
    ViewData["Title"] = "Delete Instructor";
}

<div class="container">
    <h1 class="text-center mb-4" style="color: white;">Delete Instructor</h1>
    
    <div class="table-container bg-light-purple p-5 shadow rounded">
        <h3 class="mb-4" style="color: white;">Are you sure you want to delete this instructor?</h3>

        <center>
            <dl class="row justify-content-center">
                <dt class="col-sm-4 text-white font-weight-bold">Full Name</dt>
                <dd class="col-sm-8">
                    <span class="text-black">@Html.DisplayFor(model => model.FullName)</span>
                </dd>
                <dt class="col-sm-4 text-white font-weight-bold">Email</dt>
                <dd class="col-sm-8">
                    <span class="text-black">@Html.DisplayFor(model => model.Email)</span>
                </dd>
            </dl>
        </center>
        <br />

        <form asp-action="DeleteInstructorConfirmed" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger custom-purple-btn">Delete</button>
            <a asp-action="Instructors" class="btn btn-outline-light ml-3" style=" border-color: #6f42c1;">Back to List</a>
        </form>
    </div>
</div>

<style>
    /* Colors */
    .bg-light-purple {
        background-color: white;
    }

    .text-purple {
        color: #6f42c1;
    }

    /* Button styling */
    .custom-purple-btn {
        background-color: #6f42c2; /* Primary purple color */
        color: white;
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: bold;
        border: none;
        transition: background-color 0.3s ease;
    }

    .custom-purple-btn:hover {
        background-color: #6f42c1;
        color: white;
    }

    .btn-outline-light {
        border: 2px solid #6f42c1; /* Change this if you want a different outline color */
        color: #6f42c1;
        border-radius: 25px;
        padding: 10px 20px;
        text-decoration: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .btn-outline-light:hover {
        background-color: #6f42c1; /* Change this if you want a different hover background */
        color: white;
    }

    /* Table container styling */
    .table-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Validation text styling */
    .text-danger {
        font-size: 0.9em;
        font-style: italic;
    }
</style>
