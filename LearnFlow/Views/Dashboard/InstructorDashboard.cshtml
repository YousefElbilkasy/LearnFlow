@model IEnumerable<LearnFlow.ViewModel.CourseViewModel>

<h2>My Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if(Model!= null &&Model.Any()){
        foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>@course.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }}
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Course</a>




