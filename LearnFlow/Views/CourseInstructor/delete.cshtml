@model LearnFlow.ViewModel.CourseViewModel

<h2>Delete Course</h2>
<p>Are you sure you want to delete the course titled <strong>@Model.Title</strong>?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="CourseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="InstructorDashboard" class="btn btn-secondary">Cancel</a>
</form>