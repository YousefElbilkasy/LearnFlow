@model LearnFlow.ViewModel.LogInUserViewModel

@{
  ViewData["Title"] = "LogIn";
}

<h1 class="text-center mb-4" style="color: white;">Log In</h1>

<div class="container">
  <div class="form-container bg-light-purple p-5 shadow rounded">
    <form asp-action="SaveLogIn">
      <div asp-validation-summary="All" class="text-danger"></div>

      <div class="form-group mb-4">
        <label asp-for="Email" class="control-label text-purple">Email</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>

      <div class="form-group mb-4">
        <label asp-for="Password" class="control-label text-purple">Password</label>
        <input asp-for="Password" class="form-control" type="password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
      </div>

      <div class="text-center">
        <input type="submit" value="Log In" class="btn custom-purple-btn" />
      </div>
    </form>
  </div>

  <div class="text-center mt-4">
    <a asp-action="Register" class="btn btn-outline-purple">Register</a>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
<!-- Embedded CSS for Consistent Style -->
<style>
  /* Colors */
  .bg-light-purple {
    background-color: white;
  }

  .text-purple {
    color: #6f42c1;
  }

  /* Button styling */
  .custom-purple-btn {
    background-color: #6f42c1;
    /* Primary purple color */
    color: white;
    border-radius: 25px;
    padding: 10px 20px;
    font-weight: bold;
    border: none;
    transition: background-color 0.3s ease;
  }

  .custom-purple-btn:hover {
    background-color: #5a3798;
    color: white;
  }

  .btn-outline-purple {
    border: 2px solid #6f42c1;
    color: white;
    border-radius: 25px;
    padding: 10px 20px;
    text-decoration: none;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .btn-outline-purple:hover {
    background-color: #6f42c1;
    color: white;
  }

  /* Form container styling */
  .form-container {
    max-width: 500px;
    margin: 20px auto;
    padding: 20px;
    border-radius: 15px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  }

  /* Form elements */
  .form-control {
    border-radius: 10px;
    border: 1px solid #6f42c1;
  }

  .form-control:focus {
    box-shadow: 0 0 5px rgba(111, 66, 193, 0.5);
    border-color: #5a3798;
  }

  /* Labels */
  .control-label {
    font-weight: bold;
  }

  /* Validation text styling */
  .text-danger {
    font-size: 0.9em;
    font-style: italic;
  }
</style>