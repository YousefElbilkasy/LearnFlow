@{
  ViewData["Title"] = "MyCourses";
}

@model IEnumerable<LearnFlow.ViewModel.CourseWithProgressViewModel>

<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <div class="section-heading">
      
        <h2 style="color:white">My Courses</h2>
      </div>
    </div>
  </div>
  <div class="row event_box">
    @foreach (var course in Model)
    {
      <div class="col-lg-4 col-md-6 align-self-center mb-30 event_outer col-md-6 design">
        <div class="events_item">
          <div class="thumb">
            <a href="@Url.Action("Details", "Course", new { id = course.CourseId })"><img src="@course.ImageUrl"
                alt=""></a>
          </div>
          <div class="down-content">
            <h4>@course.Title</h4>
            <!-- Progress Bar -->
            <div class="progress">
              <div class="progress-bar" role="progressbar" style="width: @course.Progress%;"
                aria-valuenow="@course.Progress" aria-valuemin="0" aria-valuemax="100">@course.Progress%</div>
            </div>
          </div>
        </div>
      </div>
    }
  </div>
</div>