@model IEnumerable<LearnFlow.Models.Course>

@{
  ViewData["Title"] = "Index";
}

<h1>Courses</h1>

<div class="row">
  @foreach (var course in Model)
  {
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <img src="@course.ImageUrl" class="card-img-top" alt="Thumbnail of @course.Title">
        <div class="card-body">
          <h5 class="card-title">@course.Title</h5>
          <p class="card-text">@course.Description</p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-secondary">Edit</a>
              <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-secondary">View</a>
              <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-sm btn-outline-danger">Delete</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  }
</div>