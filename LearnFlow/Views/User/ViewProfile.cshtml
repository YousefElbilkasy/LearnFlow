@model LearnFlow.ViewModel.ViewProfileViewModel

@{
  ViewData["Title"] = "ViewProfile";
}

<h1>ViewProfile</h1>

<div>
  <h4>ViewProfileViewModel</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Email)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.FullName)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.FullName)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.ImageUrl)
    </dt>
    <dd class="col-sm-10">
      <label asp-for="ImageUrl"></label>
    </dd>
    <dt class="col-sm-2">
      <img src="@Model.ImageUrl" alt="Profile Picture">
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.UserName)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.PhoneNumber)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.PhoneNumber)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.DateJoined)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.DateJoined)
    </dd>
  </dl>
</div>
<div>
  @Html.ActionLink("Edit", "EditProfile", new {  id = Model.Id })
  @if (User.IsInRole("Admin"))
  {
    <a asp-action="Index">Back to List</a>
  }
</div>
