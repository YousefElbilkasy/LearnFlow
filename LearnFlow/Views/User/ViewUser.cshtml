@model User

@{
  ViewData["Title"] = "ViewUser";
}

<h2>ViewUser</h2>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <img src="@Model.ImageUrl" alt="Profile Picture" class="img-fluid rounded-circle mb-3">
    </div>
    <div class="col-md-8">
      <h3>@Model.FullName</h3>
      <p class="text-muted">@Model.Email</p>
      <hr>
      <div class="row">
        <div class="col-md-6">
          <h5>About</h5>
          <p>Bio</p>
        </div>
        <div class="col-md-6">
          <h5>Details</h5>
          <ul class="list-unstyled">
            <li><strong>Joined:</strong> @Model.DateJoined.ToShortDateString()</li>
            <li><strong>Courses:
              @foreach (var course in Model.Courses)
              {
                <a href="/Course/ViewCourse/@course.CourseId">@course.Title</a>
              }
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12">
      <h4>Recent Activity</h4>
      <!-- Add recent activity content here -->
    </div>
  </div>
</div>
