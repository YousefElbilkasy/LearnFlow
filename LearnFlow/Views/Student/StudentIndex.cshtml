@model dynamic

<h1 class="mb-4">Student Profile</h1>

<div>
    <h4>Personal Information</h4>
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10" style="font-size: 1.5rem;">@Model.Student.Email</dd> <!-- Increased font size -->

        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10" style="font-size: 1.5rem;">@Model.Student.FullName</dd> <!-- Increased font size -->

        <dt class="col-sm-2">Date Joined</dt>
        <dd class="col-sm-10" style="font-size: 1.5rem;">@Model.Student.DateJoined.ToShortDateString()</dd> <!-- Increased font size -->
    </dl>
</div>

<div>
    <a asp-action="Details" asp-route-studentId="@Model.Student.Id" class="btn btn-purple">View Registered Courses</a>
</div>

<div>
    <a asp-action="Result" asp-route-studentId="@Model.Student.Id" class="btn btn-purple">View Test Results</a>
</div>

<div>
    <a asp-action="StudentIndex" class="btn btn-purple">Return to Menu</a>
</div>

<style>
    .btn-purple {
        background-color: #6a0dad; /* Set button background color to purple */
        color: white; /* Set button text color to white */
        font-size: 1rem; /* Increase button font size */
        padding: 10px 15px; /* Add some padding */
        margin-top: 10px; /* Add top margin for spacing */
    }
</style>